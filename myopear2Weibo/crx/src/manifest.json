{
	"manifest_version": 2,

	"name": "myOpera微博同步工具",
	"description": "分享myopera里的博客文章到微博的脚本。",
	"version": "0.9",
	"icons":{
		"128":"images/icon_128.png"
	},

	"content_scripts": [ {
		"js": [ "includes/myopera2Weibo.js" ],
		"matches": [ "http://my.opera.com/*" ]
	}],
	"content_security_policy": "script-src 'self'; object-src 'self'"
}
